<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@drawable/header"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/nav_profile_image"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/profile"
        app:civ_border_color="#CDDC39"
        app:civ_border_width="2dp"
        app:civ_shadow="true"
        android:scaleType="centerCrop"
        app:civ_shadow_radius="5dp"
        app:civ_shadow_color="@android:color/background_light"/>

    <TextView
        android:id="@+id/nav_user_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nav_profile_image"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="UserName"
        android:textColor="#FFFEFE"
        android:textSize="20dp"
        android:textStyle="bold" />


</RelativeLayout>