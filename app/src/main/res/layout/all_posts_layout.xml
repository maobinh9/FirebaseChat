<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mainBackgroud"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:background="@drawable/post_bolder"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="3dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/post_profile_image"
                android:scaleType="centerCrop"
                app:civ_border_width="2dp"
                android:src="@drawable/profile"
                android:layout_marginLeft="4dp"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="6dp"
                    android:id="@+id/post_user_name"
                    android:text="User name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:padding="2dp"
                    android:layout_marginLeft="4dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/text"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:text="Has been updated to a post:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                    android:id="@+id/post_date"
                    android:textColor="@android:color/background_dark"
                    android:textSize="13dp"
                    android:layout_marginLeft="3dp"
                    android:text="Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/post_time"
                        android:textColor="@android:color/background_dark"
                        android:textSize="13dp"
                        android:layout_marginLeft="3dp"
                        android:text="Time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/post_description1"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:padding="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="8dp"
            android:text="Post decsription...."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginBottom="10dp"
            android:background="@drawable/post_bolder"
            android:id="@+id/post_image"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/like_button"
                android:background="@null"
                android:src="@drawable/dislike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/display_no_of_likes"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="5dp"
                android:text="0 Likes"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageButton
                android:id="@+id/comment_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:background="@null"
                android:src="@drawable/comment" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>